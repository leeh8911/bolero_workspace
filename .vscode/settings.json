{
    "editor.formatOnSave": false,
    "[c]": {
        "editor.formatOnSave": true
    },
    "[cpp]": {
        "editor.formatOnSave": true
    },
    "[h]": {
        "editor.formatOnSave": true
    },
    "[hpp]": {
        "editor.formatOnSave": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.clang-tidy": "explicit"
    },
    "clang-tidy.useBuildPath": "build"
}