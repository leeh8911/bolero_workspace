#---------------------------------
# Project 설정
#---------------------------------

PROJECT_NAME           = "Bolero"
OUTPUT_DIRECTORY       = docs_out

#---------------------------------
# 입력 소스 & 탐색 범위
#---------------------------------

# Bolero 코드가 실제로 있는 경로 기준으로 맞춰줘야 함
INPUT                  = bolero/src
FILE_PATTERNS          = *.hpp \
                         *.h \
                         *.cpp

RECURSIVE              = YES

#---------------------------------
# 출력 형식
#---------------------------------

GENERATE_HTML          = YES
HTML_OUTPUT            = html

GENERATE_LATEX         = NO

#---------------------------------
# 추출 범위 (얼마나 많이 문서화할지)
#---------------------------------

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
EXTRACT_LOCAL_METHODS  = YES
EXTRACT_ANON_NSPACES   = YES

# 문서화 안 된 것들도 관계에 포함시키기
HIDE_UNDOC_RELATIONS   = NO

# 표준 라이브러리 타입도 예쁘게
BUILTIN_STL_SUPPORT    = YES

#---------------------------------
# 소스 브라우저
#---------------------------------

SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES

#---------------------------------
# Graphviz / UML 다이어그램
#---------------------------------

HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
INTERACTIVE_SVG        = YES

# 클래스 상속/구성 다이어그램
CLASS_DIAGRAMS         = YES
CLASS_GRAPH            = YES
COLLABORATION_GRAPH    = YES
GRAPHICAL_HIERARCHY    = YES
DIRECTORY_GRAPH        = YES

UML_LOOK               = YES
TEMPLATE_RELATIONS     = YES

# include 의존성 그래프 (원하면 켜기)
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES

#---------------------------------
# 그래프 깊이 / 크기 조절
#---------------------------------

# 그래프 하나에 포함될 최대 노드 수
# 0 = 제한 없음인데, 너무 커지면 보기 힘드니 적당히 타협
DOT_GRAPH_MAX_NODES    = 150

# 루트에서 몇 step까지 따라갈지 (0 = 제한 없음)
# 깊은 관계 보고 싶으면 0, 다만 너무 깊으면 그래프가 난장판 됨
MAX_DOT_GRAPH_DEPTH    = 0

# 너무 복잡한 그래프는 클러스터링해서 표시 (true면 조금 더 정돈됨)
DOT_CLEANUP            = YES

#---------------------------------
# 함수 호출/호출자 그래프
#---------------------------------

CALL_GRAPH             = YES
CALLER_GRAPH           = YES

#---------------------------------
# 정리용 기타 설정 (취향)
#---------------------------------

# 정렬, 이름 처리 등
SORT_MEMBER_DOCS       = YES
